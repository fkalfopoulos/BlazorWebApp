@page "/customers/edit/{id:guid}"
@page "/customers/new"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@using EpsilonWebApp.Client.Models
@using EpsilonWebApp.Client.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Web
@attribute [Authorize]
@inject ICustomerService CustomerService
@inject NavigationManager Navigation

<PageTitle>@(IsNew ? "Create New Customer" : "Edit Customer")</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="bi @(IsNew ? "bi-plus-circle" : "bi-pencil-square")"></i>
                        @(IsNew ? "Create New Customer" : "Edit Customer")
                    </h2>
                </div>
                <div class="card-body">
                    @if (successMessage != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill"></i> @successMessage
                            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
                        </div>
                    }

                    @if (errorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                        </div>
                    }

                    @if (customer != null)
                    {
                        <EditForm Model="@customer" OnValidSubmit="@HandleSubmit">
                            <DataAnnotationsValidator />

                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label for="companyName" class="form-label fw-bold">
                                        Company Name <span class="text-danger">*</span>
                                    </label>
                                    <InputText id="companyName" 
                                               class="form-control form-control-lg" 
                                               @bind-Value="customer.CompanyName" 
                                               placeholder="Enter company name" />
                                    <ValidationMessage For="@(() => customer.CompanyName)" class="text-danger small" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label for="contactName" class="form-label fw-bold">Contact Name</label>
                                    <InputText id="contactName" 
                                               class="form-control" 
                                               @bind-Value="customer.ContactName" 
                                               placeholder="Enter contact person name" />
                                    <ValidationMessage For="@(() => customer.ContactName)" class="text-danger small" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label for="address" class="form-label fw-bold">Address</label>
                                    <InputText id="address" 
                                               class="form-control" 
                                               @bind-Value="customer.Address" 
                                               placeholder="Street address" />
                                    <ValidationMessage For="@(() => customer.Address)" class="text-danger small" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="city" class="form-label fw-bold">City</label>
                                    <InputText id="city" 
                                               class="form-control" 
                                               @bind-Value="customer.City" 
                                               placeholder="City" />
                                    <ValidationMessage For="@(() => customer.City)" class="text-danger small" />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="region" class="form-label fw-bold">Region/State</label>
                                    <InputText id="region" 
                                               class="form-control" 
                                               @bind-Value="customer.Region" 
                                               placeholder="State or Province" />
                                    <ValidationMessage For="@(() => customer.Region)" class="text-danger small" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="postalCode" class="form-label fw-bold">Postal Code</label>
                                    <InputText id="postalCode" 
                                               class="form-control" 
                                               @bind-Value="customer.PostalCode" 
                                               placeholder="ZIP/Postal Code" />
                                    <ValidationMessage For="@(() => customer.PostalCode)" class="text-danger small" />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="country" class="form-label fw-bold">Country</label>
                                    <InputText id="country" 
                                               class="form-control" 
                                               @bind-Value="customer.Country" 
                                               placeholder="Country" />
                                    <ValidationMessage For="@(() => customer.Country)" class="text-danger small" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label for="phone" class="form-label fw-bold">Phone</label>
                                    <InputText id="phone" 
                                               class="form-control" 
                                               @bind-Value="customer.Phone" 
                                               placeholder="+1-555-123-4567" />
                                    <ValidationMessage For="@(() => customer.Phone)" class="text-danger small" />
                                </div>
                            </div>

                            <hr class="my-4" />

                            <div class="d-flex justify-content-between align-items-center">
                                <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </button>
                                <button type="submit" class="btn btn-primary btn-lg" disabled="@isLoading">
                                    @if (isLoading)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        <span>@(IsNew ? "Creating..." : "Updating...")</span>
                                    }
                                    else
                                    {
                                        <i class="bi @(IsNew ? "bi-plus-circle" : "bi-check-circle")"></i>
                                        <span>@(IsNew ? "Create Customer" : "Update Customer")</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    }
                    else if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-3 text-muted">Loading customer data...</p>
                        </div>
                    }
                </div>
            </div>

            @if (!IsNew && customer != null)
            {
                <div class="text-muted mt-3">
                    <small><i class="bi bi-info-circle"></i> Customer ID: @customer.Id</small>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Guid? Id { get; set; }

    private CustomerDto? customer;
    private bool isLoading = true;
    private string? errorMessage;
    private string? successMessage;

    private bool IsNew => !Id.HasValue;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (IsNew)
            {
                customer = new CustomerDto();
                isLoading = false;
            }
            else
            {
                customer = await CustomerService.GetCustomerAsync(Id!.Value);
                if (customer == null)
                {
                    errorMessage = "Customer not found";
                }
                isLoading = false;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load customer: {ex.Message}";
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        if (customer == null) return;

        try
        {
            isLoading = true;
            errorMessage = null;
            successMessage = null;

            if (IsNew)
            {
                await CustomerService.CreateCustomerAsync(customer);
                successMessage = "Customer created successfully!";
                
                // Navigate back to list after a short delay
                await Task.Delay(1500);
                Navigation.NavigateTo("/customers");
            }
            else
            {
                await CustomerService.UpdateCustomerAsync(customer.Id, customer);
                successMessage = "Customer updated successfully!";
                
                // Navigate back to list after a short delay
                await Task.Delay(1500);
                Navigation.NavigateTo("/customers");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to {(IsNew ? "create" : "update")} customer: {ex.Message}";
            isLoading = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/customers");
    }
}
